{
  "format": "page",
  "id": "post",
  "label": "Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,strong,em,hyperlink"
        }
      },
      "image": {
        "type": "Image",
        "config": {
          "label": "Image",
          "constraint": {
            "width": 1200,
            "height": 500
          },
          "thumbnails": [
            {
              "name": "thumb",
              "width": 500,
              "height": 500
            }
          ]
        }
      },
      "is_live": {
        "type": "Boolean",
        "config": {
          "label": "Live in Production",
          "placeholder_false": "false",
          "placeholder_true": "true",
          "default_value": true
        }
      },
      "published_on": {
        "type": "Timestamp",
        "config": {
          "label": "Published On",
          "placeholder": ""
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "embed": {
              "type": "SharedSlice"
            },
            "code_block": {
              "type": "SharedSlice"
            },
            "gallery": {
              "type": "SharedSlice"
            },
            "content": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
